    "75:class_g = 'conky'",

    # ========== ALWAYS OPAQUE (critical windows) ==========
    "100:window_type = 'dock'",
    "100:window_type = 'desktop'",
    "100:_NET_WM_STATE *= '_NET_WM_STATE_FULLSCREEN'",
    "100:_NET_WM_STATE *= '_NET_WM_STATE_STICKY'"
