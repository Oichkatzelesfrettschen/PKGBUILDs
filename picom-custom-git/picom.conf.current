# Picom Configuration - ENHANCED Maximal Rice for MATE/Marco
# Merged: CachyOS optimizations + Custom glassy/blur settings
# Optimized for NVIDIA RTX 4070 Ti with dual_kawase blur
# Backend: GLX with NO VSYNC for raw uncapped performance
# USER REQUIREMENT: NO VRR, NO Gsync, NO Freesync, NO adaptive sync, NO Vertical Sync
# Mode: RAW UNCAPPED - each display runs fully uncapped

#################################
#          Backend              #
#################################
backend = "glx";
vsync = false;
experimental-backends = true;
glx-no-stencil = true;
glx-no-rebind-pixmap = true;
use-damage = true;
xrender-sync-fence = false;

# NVIDIA-specific optimizations
glx-copy-from-front = false;
glx-swap-method = 2;

#################################
#          Shadows              #
#################################
# ENHANCED: Deeper shadows for 3D depth effect
shadow = true;
shadow-radius = 28;
shadow-offset-x = -18;
shadow-offset-y = -18;
shadow-opacity = 0.55;

# Dracula shadow color (dark purple-black)
shadow-red = 0.17;
shadow-green = 0.16;
shadow-blue = 0.21;

shadow-exclude = [
    "name = 'Notification'",
    "class_g = 'Conky'",
    "class_g ?= 'Notify-osd'",
    "class_g = 'Cairo-clock'",
    "class_g = 'Plank'",
    "class_g = 'Polybar'",
    "class_g = 'slop'",
    "class_g = 'stalonetray'",
    "_GTK_FRAME_EXTENTS@",
    "window_type = 'dock'",
    "window_type = 'desktop'",
    "window_type = 'notification'",
    "_NET_WM_STATE *= '_NET_WM_STATE_HIDDEN'"
];

#################################
#          Fading               #
#################################
fading = true;
fade-in-step = 0.03;
fade-out-step = 0.03;
fade-delta = 5;

fade-exclude = [
    "class_g = 'slop'",
    "window_type = 'notification'"
];

#################################
#       Transparency            #
#################################
# FROSTY GLASS MODE: Reduced opacity for translucent effect
inactive-opacity = 0.88;
active-opacity = 0.95;
frame-opacity = 0.85;
inactive-opacity-override = false;
inactive-dim = 0.3;

opacity-rule = [
    # ========== GAMING & PERFORMANCE-CRITICAL (100% opaque) ==========
    "100:class_g = 'steam'",
    "100:class_g = 'Steam'",
    "100:class_g = 'steamwebhelper'",
    "100:class_g = 'Lutris'",
