#################################
#          Blur                 #
#################################
# Using dual_kawase for high-quality, performant blur
# MAXIMUM DEPTH: Increased strength to 10 for dramatic glassy effect
blur: {
  method = "dual_kawase";
  strength = 10;
  deviation = 0.0;
  kernel = "11x11gaussian";
  background = true;
  background-frame = true;
  background-fixed = true;
  kern = "3x3box";
}

blur-background-exclude = [
    # BLUR ENABLED ON PANELS! Removed dock exclusion for glassy panels
    # "window_type = 'dock'",
    "window_type = 'desktop'",
    "class_g = 'Plank'",
    "class_g = 'slop'",
    # ENABLED BLUR ON PANELS for true glassy effect!
    # "class_g = 'mate-panel'",
    # "name *= 'Brisk Menu'",
    # "class_g = 'mate-menu'",
    "_GTK_FRAME_EXTENTS@",
    "_NET_WM_STATE *= '_NET_WM_STATE_FULLSCREEN'"
];

#################################
#      Rounded Corners          #
#################################
# ENHANCED: Smoother corners for modern glassy look
corner-radius = 14;
round-borders = 1;

rounded-corners-exclude = [
    "window_type = 'dock'",
    "window_type = 'desktop'",
    "class_g = 'Plank'",
    "class_g = 'Polybar'",
    "class_g = 'dwm'",
    "_NET_WM_STATE *= '_NET_WM_STATE_FULLSCREEN'"
];

round-borders-exclude = [];

#################################
#        Animations             #
#################################
# HYBRID: Custom animations + CachyOS transitions
animations = true;
animation-stiffness = 300;
animation-dampening = 20;
animation-window-mass = 1.0;
animation-clamping = false;

# Animation presets
animation-for-open-window = "slide-down";
animation-for-unmap-window = "slide-up";
animation-for-menu-window = "none";
animation-for-transient-window = "slide-down";

# Custom animation rules
animation-delta = 10;
animation-duration-min = 120;
animation-duration-max = 180;

# CachyOS-style transitions (alternative animation system)
transition-length = 50;
transition-pow-x = 0.1;
transition-pow-y = 0.1;
transition-pow-w = 0.1;
transition-pow-h = 0.1;
size-transition = true;

#################################
#      General Settings         #
#################################
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
detect-transient = true;
detect-client-leader = true;
# refresh-rate removed (deprecated) - picom auto-detects via X RandR

# Performance tuning
unredir-if-possible = true;
unredir-if-possible-exclude = [
    # Browsers (prevent flickering)
    "class_g = 'firefox'",
    "class_g = 'Firefox'",
    "class_g = 'Chromium'",
    "class_g = 'Google-chrome'",

    # Gaming (keep compositing for overlays)
    "class_g = 'steam'",
    "class_g = 'Steam'",
    "class_g = 'lutris'",
    "class_g = 'Lutris'",

    # Video/Streaming (prevent tearing)
    "class_g = 'obs'",
    "class_g = 'obs-studio'",
    "class_g = 'mpv'",
    "class_g = 'vlc'"
];

# Focus behavior
focus-exclude = [
    "class_g = 'Cairo-clock'",
    "class_g = 'slop'",
    "class_g = 'Bar'"
];

# Logging
log-level = "info";

#################################
#      Window Type Rules        #
#################################
wintypes:
{
    # Tooltips (enhanced)
    tooltip = {
        fade = true;
        shadow = true;
        opacity = 0.95;
        focus = true;
        full-shadow = false;
    };

    # Docks and panels
    dock = {
        shadow = false;
        clip-shadow-above = true;
        opacity = 1.0;
    };

    # Drag and drop
    dnd = {
        shadow = false;
    };

    # Popup menus (enhanced glassy)
    popup_menu = {
        opacity = 0.95;
        shadow = true;
        fade = true;
    };

    # Dropdown menus (enhanced glassy)
    dropdown_menu = {
        opacity = 0.95;
        shadow = true;
        fade = true;
    };

    # Notifications
    notification = {
        shadow = true;
        fade = true;
        opacity = 0.95;
    };

    # Dialogs
    dialog = {
        shadow = true;
        opacity = 1.0;
    };

    # Normal windows (enhanced from CachyOS)
    normal = {
        shadow = true;
        fade = true;
    };

    # Utility windows
    utility = {
        shadow = true;
    };

    # Desktop
    desktop = {
        shadow = false;
        blur-background = false;
    };
};
